<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nametext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img1"
                    android:text="This is Demo Name"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/courstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nametext"
                    android:layout_marginLeft="10dp"
                    android:text="Advance: "
                    android:textColor="#000"
                    android:textSize="25sp" />
                <!--                    android:layout_toStartOf="@id/coursetext"-->


                <TextView
                    android:id="@+id/coursetext"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nametext"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/courstext"
                    android:text="This is Advance"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/fueltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coursetext"
                    android:layout_marginLeft="10dp"
                    android:text="Fuel: "
                    android:textColor="#000"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/emailtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coursetext"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/fueltext"
                    android:text="This is Fuel"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tyretext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailtext"
                    android:layout_marginLeft="10dp"
                    android:text="Tyre: "
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/companytext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailtext"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/fueltext"
                    android:text="This is Tyre Allowance"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/monthtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/companytext"
                    android:layout_marginLeft="10dp"
                    android:text="Month: "
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/monthstext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/companytext"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/monthtext"
                    android:text="This is Advance Month"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/editedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/monthstext"
                    android:layout_marginLeft="10dp"
                    android:text="Edited By: "
                    android:textColor="#000"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/lastedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/monthstext"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editedtext"
                    android:text="This is Last edited by"
                    android:textColor="#000"
                    android:textSize="25sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editicon"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_edit_24" />


            <ImageView
                android:id="@+id/deleteicon"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_delete_24" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>